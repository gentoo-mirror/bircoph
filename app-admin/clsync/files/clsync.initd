[[ -n "${CLSYNC_CONF}" ]] && conffile="--config-file ${CLSYNC_CONF}"

command="/usr/bin/clsync"
pidfile="/var/run/${SVCNAME}.pid"
command_args="--background --syslog --pid-file=${pidfile} \
${conffile} ${CLSYNC_OPTS}"

depend() {
	use net
}
